<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/LinearLayout1"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".My_office">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0">


        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:padding="7dp"
            android:layout_margin="5dp"
            android:background="@drawable/gradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/money_roulette"
                android:gravity="center"
                android:textColor="#000"
                android:text="0"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/score"
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/money_roulette"
                android:background="@drawable/crowncoin"
                android:backgroundTint="@color/Black"
                android:textSize="12sp" />
        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/roulette_6"
            android:adjustViewBounds="true"
            android:id="@+id/rouletteImage"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />


        <Button
            android:background="#fff"
            android:padding="3sp"
            android:drawableBottom="@drawable/start"
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="onClickButtonRotation"
            android:layout_centerHorizontal="true"
            android:text="Крутить за 3 монетки"
            android:layout_marginBottom="10sp"
            android:textSize="15sp"/>



        <ImageView android:id="@+id/imageSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/selected"
            android:layout_above="@+id/rouletteImage"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>

</LinearLayout>